<% if Helpers.is_logged_in?(session) %>
<%= @error %>
    <% if Helpers.current_user(session).id === @material.cosplay.user_id%>
        <%= @error %>
        <h2>Edit Material</h2>
        <form action="/materials/<%= @material.id%>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
            Name:
            <input type="text" name="material[name]" placeholder=<%= @material.name%>>
            </br>
            Link:
            <input type="text" name="material[store_link]" placeholder=<%= @material.store_link%>><br>
            </br>
            <input type="submit" name="submit" value ="Edit" id="submit">

        </form>
    <% else %>
        <h1> You can only edit your own tweets </h1>
    <% end %>

  <% else %>
      <h1> You Must Be Logged in to Edit Tweets </h1>
  <% end %>
